[merge]
  tool = kdiff3
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = black bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  st = status
  ci = commit
  cim = commit -m
  cia = commit --amend
  co = checkout
  cnb = checkout -b
  br = branch
  sb = show-branch
  cp = cherry-pick
  staged = diff --cached
  rb = rebase origin/master
  rbc = rebase --continue
  rbs = rebase --skip
  rl = reflog
  rm = remote
  rms = remote show
  rmv = remote -v
  rmu = remote update
  rmp = remote prune
  sm = submodule
  lg = log
  lgp = log -p
  lga = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  rh = reset --hard origin/master
  sq = merge --squash
  p2rb = push origin
  del = branch -D
  auth = for-each-ref --format='%(committerdate) %09 %(authorname) %09 %(refname)'
  review = push origin HEAD:refs/for/master
  draft = push origin HEAD:refs/drafts/master
  files = show --pretty="format:" --name-only
[core]
  editor = /usr/bin/vim
[user]
   name = slatorator
   email = slatorator@users.noreply.github.com
